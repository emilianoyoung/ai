{
    {% assign page_size = site.pagination.page_size | default: 15 -%}
    {% assign current_page = page.page | default: 1 -%}
    {% assign for_offset = current_page | minus: 1 | times:page_size -%}
    {% assign for_count = 0 -%}
    "page": {{ current_page }},
    "value": [
        {% assign newsletter_issues = site.newsletter | sort: "publishedDateTime" | reverse -%}
        {% for issue in newsletter_issues limit:page_size offset:for_offset -%}
        {
            {% if forloop.last -%}
                {% assign for_count = forloop.length -%}
            {% endif -%}
            "path": {{ issue.path | jsonify }},
            "title": {{ issue.title | jsonify }},
            "type": {{ issue.type | jsonify }},
            "url": "{{ issue.url | absolute_url }}",
            "excerpt": {{ issue.excerpt | strip_html | normalize_whitespace | strip | jsonify }},
            "publishedDateTime": {{ issue.publishedDateTime | jsonify }},
            "images": [
                {% for image in issue.images -%}
                {
                    "width": {{ image.width | default: 0 }},
                    "height": {{ image.height | default: 0 }},
                    "url": "{{ image.url | absolute_url }}",
                    "attribution": {{ image.attribution | jsonify }},
                    "title": {{ image.title | jsonify }}
                }{% unless forloop.last -%},{% endunless %}
                {% endfor %}
            ],
            "locale": {{ issue.locale | default: site.locale | jsonify }},
            "topics": {{ issue.topics | jsonify }}
        }{% unless forloop.last -%},{% endunless %}
        {% endfor %}
    ],
    {% if for_count < page_size or current_page == 9 -%}
    "nextPage": null
    {% else -%}
    "nextPage": "{{ current_page | plus:1 }}"
    {%- endif %}
}
